<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/btn_spanish"
        android:layout_width="239dp"
        android:layout_height="49dp"
        android:text="Spanish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_display"
        app:layout_constraintVertical_bias="0.323" />

    <Button
        android:id="@+id/btn_English"
        android:layout_width="239dp"
        android:layout_height="49dp"
        android:layout_marginTop="63dp"
        android:text="English"
        app:layout_constraintBottom_toTopOf="@+id/btn_spanish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_display"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_french"
        android:layout_width="239dp"
        android:layout_height="49dp"
        android:layout_marginTop="46dp"
        android:text="French"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_spanish"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/tv_display"
        android:layout_width="277dp"
        android:layout_height="43dp"
        android:text="Please select a language"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151" />
</androidx.constraintlayout.widget.ConstraintLayout>